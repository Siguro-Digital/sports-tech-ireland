<div class="flex flex-col justify-between items-start w-1/3 h-80 border rounded-lg p-10 {{ color }}"
    style="background-color:{{ hex }};">
    <div class="self-start xl:w-1/2 lg:w-3/4 md:w-4/5">
        <h3 class="font-bold text-white uppercase text-4xl font-heading">{{ text }}</h3>
    </div>
    <div class="flex flex-row justify-between items-end">
        <div class="self-end absolute">
            <svg class="2xl:40 xl:ml-60 lg:ml-56 md:ml-40" xmlns="http://www.w3.org/2000/svg" width="75" height="240" viewBox="0 0 80 150">
                <rect x="10" y="5" width="15" height="150" fill="#FFFF" />
                <rect x="38" y="5" width="15" height="150" fill="#FFFF" />
                <rect x="65" y="5" width="20" height="150" fill="#FFFF" />
            </svg>
        </div>
    </div>
    <div class="self-end">
        {{> button 
            text="Find out more" 
            color="bg-white" 
            border-color="border-white" 
        }}
    </div>
</div>
